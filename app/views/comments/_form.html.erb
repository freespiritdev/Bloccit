<%= form_for [@topic, @post, @post.comments.build] do |f| %>
  <div class="form-group">
   <label for="inputPassword" class="col-sm-1 control-label">
       <%= f.label :body%>
   </label>
    <div class="col-sm-4">
      <%= f.text_field :body, class: 'form-control'%>
    </div>
    <div class="col-md-2">
      <%= f.submit "Create Comment", class: 'btn btn-default'%>
    </div>
  </div>
<% end %>